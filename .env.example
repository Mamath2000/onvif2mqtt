# Configuration de test pour l'application ONVIF-MQTT
# Copiez ce fichier vers .env et modifiez selon vos besoins

# Configuration MQTT
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=onvif_controller_test
MAX_RECONNECT_ATTEMPTS=3
RECONNECT_DELAY=5000

# Configuration Home Assistant
HA_DISCOVERY_ENABLED=true
HA_DISCOVERY_PREFIX=homeassistant
HA_DEVICE_NAME=ONVIF Controller Test
HA_DEVICE_ID=onvif_controller_test
HA_BASE_TOPIC=onvif2mqtt
ONVIF_TIMEOUT=10000

# Configuration serveur HTTP
HTTP_PORT=3000

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Intervalle de mise à jour des statuts (en millisecondes)
STATUS_UPDATE_INTERVAL=30000

# Configuration des caméras (exemple)
# Décommentez et modifiez ces lignes pour ajouter vos caméras :
# CAMERA_1_NAME=Camera Salon
# CAMERA_1_HOST=192.168.1.100
# CAMERA_1_PORT=80
# CAMERA_1_USERNAME=admin
# CAMERA_1_PASSWORD=password123

# CAMERA_2_NAME=Camera Jardin
# CAMERA_2_HOST=192.168.1.101
# CAMERA_2_PORT=80
# CAMERA_2_USERNAME=admin
# CAMERA_2_PASSWORD=password456

# Configuration PTZ
PTZ_DEFAULT_SPEED=0.5
PTZ_MOVE_STEP=0.1
PTZ_ZOOM_STEP=0.15