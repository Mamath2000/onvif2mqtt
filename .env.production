# Variables d'environnement pour l'application ONVIF-MQTT
# Copiez ce fichier vers .env et modifiez les valeurs selon votre configuration

# ================================================================
# CONFIGURATION MQTT
# ================================================================

# URL du broker MQTT (Home Assistant ou broker externe)
MQTT_BROKER_URL=mqtt://192.168.1.10:1883

# Authentification MQTT (optionnel)
MQTT_USERNAME=homeassistant
MQTT_PASSWORD=votre_mot_de_passe_mqtt

# ID client MQTT unique
MQTT_CLIENT_ID=onvif_controller_001

# ================================================================
# CONFIGURATION HOME ASSISTANT
# ================================================================

# Préfixe de découverte automatique
HA_DISCOVERY_PREFIX=homeassistant

# Nom de l'appareil dans Home Assistant
HA_DEVICE_NAME=Contrôleur ONVIF

# Identifiant unique de l'appareil
HA_DEVICE_ID=onvif_controller

# ================================================================
# CONFIGURATION SERVEUR HTTP
# ================================================================

# Port du serveur web (interface de gestion)
HTTP_PORT=3000

# ================================================================
# CONFIGURATION DES CAMERAS
# ================================================================
# Ajoutez autant de caméras que nécessaire en incrémentant le numéro

# Caméra 1 - Salon
CAMERA_1_NAME=Camera Salon
CAMERA_1_HOST=192.168.1.100
CAMERA_1_PORT=80
CAMERA_1_USERNAME=admin
CAMERA_1_PASSWORD=password123

# Caméra 2 - Jardin (avec PTZ)
CAMERA_2_NAME=Camera Jardin
CAMERA_2_HOST=192.168.1.101
CAMERA_2_PORT=80
CAMERA_2_USERNAME=admin
CAMERA_2_PASSWORD=password456

# Caméra 3 - Entrée
CAMERA_3_NAME=Camera Entree
CAMERA_3_HOST=192.168.1.102
CAMERA_3_PORT=8080
CAMERA_3_USERNAME=user
CAMERA_3_PASSWORD=motdepasse

# Caméra 4 - Bureau
# CAMERA_4_NAME=Camera Bureau
# CAMERA_4_HOST=192.168.1.103
# CAMERA_4_PORT=80
# CAMERA_4_USERNAME=admin
# CAMERA_4_PASSWORD=secure123

# ================================================================
# CONFIGURATION DES LOGS
# ================================================================

# Niveau de logs (error, warn, info, debug)
LOG_LEVEL=info

# Fichier de logs principal
LOG_FILE=logs/app.log

# ================================================================
# CONFIGURATION AVANCEE
# ================================================================

# Intervalle de mise à jour des statuts (en millisecondes)
# 30000 = 30 secondes
STATUS_UPDATE_INTERVAL=30000

# Délai de découverte des caméras (en millisecondes)
DISCOVERY_TIMEOUT=5000

# Nombre maximum de tentatives de reconnexion
MAX_RECONNECT_ATTEMPTS=5

# Délai entre les tentatives de reconnexion (en millisecondes)
RECONNECT_DELAY=10000

# ================================================================
# CONFIGURATION MQTT AVANCEE
# ================================================================

# Qualité de service MQTT (0, 1 ou 2)
MQTT_QOS=1

# Conserver les messages (true/false)
MQTT_RETAIN=true

# Délai de keep-alive MQTT (en secondes)
MQTT_KEEPALIVE=60

# ================================================================
# CONFIGURATION ONVIF
# ================================================================

# Délai de timeout pour les commandes ONVIF (en millisecondes)
ONVIF_TIMEOUT=10000

# Profil ONVIF par défaut (0 = premier profil)
DEFAULT_PROFILE_INDEX=0

# Vitesse PTZ par défaut (0.0 à 1.0)
DEFAULT_PTZ_SPEED=0.5

# ================================================================
# CONFIGURATION DE SECURITE
# ================================================================

# Activer HTTPS (true/false) - nécessite certificats
ENABLE_HTTPS=false

# Chemin vers le certificat SSL
SSL_CERT_PATH=certs/certificate.crt

# Chemin vers la clé privée SSL
SSL_KEY_PATH=certs/private.key

# Autoriser l'accès uniquement depuis ces IPs (séparées par des virgules)
# Laissez vide pour autoriser tous les accès
ALLOWED_IPS=

# ================================================================
# VARIABLES D'ENVIRONNEMENT SYSTEME
# ================================================================

# Environnement Node.js
NODE_ENV=production

# Options Node.js (pour optimiser la mémoire sur Raspberry Pi)
# NODE_OPTIONS=--max-old-space-size=512
